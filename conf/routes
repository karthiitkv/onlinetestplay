# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           			org.kvkit.controllers.HomeController.index
GET     /firstAction                           	org.kvkit.controllers.OnlineTestController.firstAction
GET		/getAllQueAns							org.kvkit.controllers.OnlineTestController.getAllQueAns
GET		/getAllQue								org.kvkit.controllers.OnlineTestController.getAllQue
GET		/getDisplayQueAns/:displayFilter		org.kvkit.controllers.OnlineTestController.getDisplayQueAns(displayFilter: Boolean)
PUT		/addQueAns								org.kvkit.controllers.OnlineTestController.addQueAns
POST	/updateQueAns							org.kvkit.controllers.OnlineTestController.updateQueAns
DELETE  /deleteQueAns							org.kvkit.controllers.OnlineTestController.deleteQueAns(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
